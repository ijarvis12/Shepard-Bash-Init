#!/usr/bin/env bash

function stop() {
  JOBS="$(jobs -p)"
  for job in "$JOBS"; do
    kill $job
  done
  PROCS="$(ls -1 /etc/shepard)"
  for proc in "$PROCS"; do
    pid=$(ps ax | grep "$proc" | grep -v grep | tail -1 | awk '{print $1}')
    if [[ -n "$pid" ]]; then
      echo "stopping $proc"
      kill $pid
    fi
  done
}

function shutdown() {
  stop
}

run() {
  while /etc/shepard/$1 &; do
    sleep 2
    pid=$(ps ax | grep "$1" | grep -v grep | tail -1 | awk '{print $1}')
    echo "$1 started with PID of $pid"
    echo "started $1 [ "$(tput setaf 2)'OK'$(tput sgr0)" ]")
    wait
  done
}

function start() {
  SOURCES="$(ls -1 /etc/shepard)"
  for source in "$SOURCES"; do
    if [[ -x /etc/shepard/$source ]]; then
      echo "staring $source"
      run "$source" & || echo "started $source [ "$(tput setaf 1)'NOT OK'$(tput sgr0)" ]"
    fi
  done
  wait
}

function restart() {
  stop
  start
}

trap stop SIGSTOP
trap shutdown SIGPWR
trap restart SIGHUP

start
